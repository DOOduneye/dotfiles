#!/usr/bin/env bash
# Fast project session switching with fzf
# Reads directories from ~/.config/tmux-sessionizer/dirs (one path per line)

CONFIG_FILE="$HOME/.config/tmux-sessionizer/dirs"

if [[ $# -eq 1 ]]; then
    selected=$1
else
    # Read directories from config file, default to home if not exists
    if [[ -f "$CONFIG_FILE" ]]; then
        dirs=()
        while IFS= read -r line; do
            [[ -n "$line" && ! "$line" =~ ^# ]] && dirs+=("$line")
        done < "$CONFIG_FILE"
    else
        dirs=("$HOME")
    fi

    # Find all subdirectories in configured paths
    selected=$(find "${dirs[@]}" -mindepth 1 -maxdepth 1 -type d 2>/dev/null | fzf)
fi

[[ -z $selected ]] && exit 0

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$selected_name" -c "$selected"
    exit 0
fi

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux switch-client -t "$selected_name"
